# Application
APP_ENV=production
APP_HOST=0.0.0.0
APP_PORT=8080
DEBUG=false
TIMEZONE=UTC
DEFAULT_LOCALE=en_US

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/zra_db
DATABASE_SCHEMA=public
DATABASE_SSL_MODE=require
DATABASE_POOL_MIN=5
DATABASE_POOL_MAX=50
DATABASE_POOL_TIMEOUT_SECONDS=30
DATABASE_MAX_LIFETIME_SECONDS=300
RUN_MIGRATIONS_ON_START=true

# Cache
REDIS_URL=redis://localhost:6379
REDIS_DB=0
REDIS_TLS=false
CACHE_TTL_SECONDS=300

# Message Queue (choose one provider)
QUEUE_PROVIDER=rabbitmq
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
KAFKA_BROKERS=localhost:9092

# Background Workers / Scheduling
WORKER_CONCURRENCY=4
SCHEDULED_JOBS_ENABLED=true

# Security
SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30
ALLOWED_HOSTS=example.com,api.example.com
CORS_ORIGINS=https://admin.example.com,https://app.example.com
CORS_ALLOW_CREDENTIALS=true
RATE_LIMIT_PER_MINUTE=120
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_SAMESITE=Strict
PASSWORD_MIN_LENGTH=12

# Blockchain
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-project-id
PRIVATE_KEY=your-private-key-here
CONTRACT_ADDRESS=your-contract-address-here
ETHEREUM_NETWORK=mainnet
GAS_PRICE_GWEI=30

# External APIs
CUSTOMS_API_URL=https://api.customs.gov
BANKING_API_URL=https://api.banking.gov
TRADE_API_URL=https://api.trade.gov
CUSTOMS_API_TIMEOUT_MS=8000
BANKING_API_TIMEOUT_MS=8000
TRADE_API_TIMEOUT_MS=8000
EXTERNAL_API_RETRY_COUNT=3
EXTERNAL_API_RETRY_BACKOFF_MS=500

# Storage
STORAGE_PROVIDER=local
S3_ENDPOINT=https://s3.amazonaws.com
S3_REGION=us-east-1
S3_BUCKET=zra-bucket
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret
MAX_UPLOAD_MB=50

# Email / SMTP
SMTP_HOST=smtp.mailgun.org
SMTP_PORT=587
SMTP_USER=postmaster@example.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@example.com
SMTP_TLS=true

# Monitoring
PROMETHEUS_PORT=8000
LOG_LEVEL=INFO
METRICS_ENABLED=true
TRACING_ENABLED=true
REQUEST_LOG_FORMAT=json
HEALTHCHECK_PATH=/health
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=zra-service
SENTRY_DSN=

# AI/ML
MODEL_PATH=./models
TRAINING_DATA_PATH=./data/training
MODEL_RUNTIME_THREADS=4
GPU_ENABLED=false
BATCH_PREDICTION_SIZE=64

# Feature Flags
FEATURE_PAYMENTS=true
FEATURE_BLOCKCHAIN_SETTLEMENTS=true
FEATURE_AUDIT_LOGS=true
MAINTENANCE_MODE=false

# Administration
ADMIN_EMAILS=ops@example.com,security@example.com

# HTTP Server
GRACEFUL_SHUTDOWN_SECONDS=20
HTTP_READ_TIMEOUT_SECONDS=30
HTTP_WRITE_TIMEOUT_SECONDS=30
MAX_REQUEST_BODY_MB=10

# Compliance & Data
AUDIT_LOG_ENABLED=true
PII_REDACTION_ENABLED=true
DATA_RETENTION_DAYS=365

